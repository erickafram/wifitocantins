<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradiente de fundo -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#10B981"
                android:centerColor="#059669"
                android:endColor="#047857"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- PadrÃ£o de pontos decorativos -->
    <item android:top="50dp" android:left="30dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
    
    <item android:bottom="100dp" android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF" />
            <size android:width="150dp" android:height="150dp" />
        </shape>
    </item>
    
    <item android:top="200dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="#10FFFFFF" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
</layer-list>
